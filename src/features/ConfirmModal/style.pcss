.confirmModal {
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    gap: 4rem;
    border-radius: 2rem;
    color: var(--colorBlack);
    font-size: 2.5rem;
    font-weight: 700;
    min-width: 57rem;
    min-height: 22rem;
    padding: 4rem;

    &__buttons {
        display: flex;
        flex-direction: row;
        justify-content: center;
        align-items: center;

    }
}